<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="emp1" class="edu.jspiders.constructorinjection.beans.Employee">
	
		<constructor-arg name="empId" value="1"/>
		<constructor-arg name="name" value="Rajesh"/>
		<constructor-arg name="gender" value="male"/>
		<constructor-arg name="salary" value="2.5"/>
	
	</bean>
	
	<bean id="emp2" class="edu.jspiders.constructorinjection.beans.Employee">
	
		<constructor-arg index="0" value="2"/>
		<constructor-arg index="1" value="Shruthi"/>
		<constructor-arg index="2" value="female"/>
		<constructor-arg index="3" value="3.2"/>
	
	</bean>	
	
</beans>